<Controls:MetroWindow x:Class="Window_About"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
                      Height="400" ResizeMode="NoResize"
                      Title="About | osu!Sync"
                      Width="900"
                      WindowStartupLocation="CenterScreen"
                      ShowIconOnTitleBar="False"
                      EnableDWMDropShadow="True">
    <Grid Background="#FFF7F7F7">
        <Grid.RowDefinitions>
            <RowDefinition Height="297"/>
            <RowDefinition Height="75*"/>
        </Grid.RowDefinitions>
        <TextBlock FontFamily="Fira Sans Light" FontSize="48" Foreground="#FF555555" HorizontalAlignment="Left" Margin="270,39,10,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="osu!Sync (en_EN)"/></TextBlock>
        <TextBlock x:Name="TextBlock_Version" Margin="270,110,10,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="16" FontFamily="Source Sans Pro" Foreground="#FF555555" HorizontalAlignment="Left" Cursor="Hand" ToolTip="Open updater."><Run Text="osu!Sync Version $Version"/></TextBlock>
        <TextBlock Margin="270,135,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="116" FontSize="16" FontFamily="Source Sans Pro" Foreground="#FF555555"><Run Text="Thank you for using osu!Sync."/></TextBlock>
        <Image Source="Resources/WindowAbout_Logo.png" Width="200" Height="200" Margin="25,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Grid Background="#FFF0F0F0" Height="75" VerticalAlignment="Bottom" Grid.Row="1">
            <TextBlock FontSize="14" Foreground="#FF555555" TextAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Bottom" Margin="0,0,0,10"><Run Text="osu!Sync is an open-source tool created by naseweis520."/></TextBlock>
            <TextBlock x:Name="Contact" TextWrapping="Wrap" Width="200" TextAlignment="Center" FontWeight="SemiBold" Foreground="#FF0088CC" FontSize="14" Cursor="Hand" HorizontalAlignment="Left" ToolTip="Questions? Just write us a mail and we'll answer. :)" VerticalAlignment="Top" Margin="10,15,0,0"><Run Text="eMail Contact"/></TextBlock>
            <TextBlock x:Name="Feedback" TextWrapping="Wrap" Width="200" TextAlignment="Center" FontWeight="SemiBold" Foreground="#FF0088CC" FontSize="14" Cursor="Hand" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,15,225,0" ToolTip="Open feedback window."><Run Text="Feedback"/></TextBlock>
            <TextBlock x:Name="osuForum" TextWrapping="Wrap" Width="200" TextAlignment="Center" FontWeight="SemiBold" Foreground="#FF0088CC" FontSize="14" Cursor="Hand" HorizontalAlignment="Center" ToolTip="Visit the forum thread." Margin="225,15,0,0" VerticalAlignment="Top"><Run Text="osu!Forum"/></TextBlock>
            <TextBlock x:Name="GitHub" TextWrapping="Wrap"  Width="200" TextAlignment="Center" FontWeight="SemiBold" Foreground="#FF0088CC" FontSize="14" Cursor="Hand" HorizontalAlignment="Right" ToolTip="Help us making osu!Sync better." Margin="0,15,10,0" VerticalAlignment="Top"><Run Text="Source Code at GitHub"/></TextBlock>
        </Grid>
    </Grid>
</Controls:MetroWindow>
